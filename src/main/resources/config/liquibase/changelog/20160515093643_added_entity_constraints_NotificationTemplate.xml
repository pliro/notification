<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity NotificationTemplate.
    -->
    <changeSet id="20160515093643-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="notification_channel_id"
                                 baseTableName="notification_template"
                                 constraintName="fk_notificationtemplate_notificationchannel_id"
                                 referencedColumnNames="id"
                                 referencedTableName="notification_channel"/>

        <addForeignKeyConstraint baseColumnNames="notification_event_id"
                                 baseTableName="notification_template"
                                 constraintName="fk_notificationtemplate_notificationevent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="notification_event"/>

        <addForeignKeyConstraint baseColumnNames="notification_notifiee_type_id"
                                 baseTableName="notification_template"
                                 constraintName="fk_notificationtemplate_notificationnotifieetype_id"
                                 referencedColumnNames="id"
                                 referencedTableName="notification_notifiee_type"/>

        <addForeignKeyConstraint baseColumnNames="organization_id"
                                 baseTableName="notification_template"
                                 constraintName="fk_notificationtemplate_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="organization"/>

    </changeSet>
</databaseChangeLog>
